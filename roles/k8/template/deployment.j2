apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-go
  namespace: "eos-{{ item }}"
spec:
  replicas: {{ result.stdout }}
  selector:
    matchLabels:
      app: hello-go
  template:
    metadata:
      labels:
        app: hello-go
    spec:
      containers:
      - name: hello-go
        image: "{{ image_name }}:{{ image_tag }}"
        imagePullPolicy: IfNotPresent
        ports:
        - containerPort: 8181